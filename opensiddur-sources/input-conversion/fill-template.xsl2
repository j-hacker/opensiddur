  xmlns:j="http://jewishliturgy.org/ns/jlptei/1.0" xmlns:tmp="http://jewishliturgy.org/ns/tmp"
  xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xd="http://www.pnp-software.com/XSLTdoc"
  exclude-result-prefixes="tmp xs xd">
