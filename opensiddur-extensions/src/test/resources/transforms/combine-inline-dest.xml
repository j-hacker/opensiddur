<tei:TEI
  xmlns:tei="http://www.tei-c.org/ns/1.0"
  xmlns:j="http://jewishliturgy.org/ns/jlptei/1.0">
  <tei:teiHeader>
      <tei:publicationStmt>
         <tei:availability>
            <tei:licence target="http://www.creativecommons.org/publicdomain/zero/1.0"/>
         </tei:availability> 
      </tei:publicationStmt>
  </tei:teiHeader>
  <tei:text>
      <j:streamText xmlns:j="http://jewishliturgy.org/ns/jlptei/1.0" xml:id="stream">
          <tei:seg xml:id="seg1">Included segment 1</tei:seg>
          <tei:anchor xml:id="start_p"/>
          <tei:seg xml:id="seg2">Included segment 2.</tei:seg>
          <tei:anchor xml:id="end_p"/>
          <tei:seg xml:id="seg3">Included segment 3.</tei:seg>
          <tei:seg xml:id="seg4">Excluded segment</tei:seg>
      </j:streamText>
      <j:concurrent>
        <j:layer type="p">
          <tei:p>
            <tei:ptr target="#range(start_p,end_p)"/>
          </tei:p>
        </j:layer>
      </j:concurrent>
      
  </tei:text>
</tei:TEI>
