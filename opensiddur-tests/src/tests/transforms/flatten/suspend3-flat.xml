<?xml version="1.0" encoding="UTF-8"?>
<tei:TEI 
  xmlns:tei="http://www.tei-c.org/ns/1.0"
  xmlns:j="http://jewishliturgy.org/ns/jlptei/1.0"
  xmlns:jf="http://jewishliturgy.org/ns/jlptei/flat/1.0"
  xml:lang="en">
  <tei:teiHeader>
    <!-- leaving it blank... -->
  </tei:teiHeader>  
  <tei:text>
    <j:concurrent>
      <jf:layer type="div" jf:id="div-layer" jf:layer-id="div-layer">
        <tei:div
          jf:start="div1"
          jf:position="1"
          jf:relative="-1"
          jf:nchildren="-1"
          jf:nlevels="1"
          jf:nprecedents="1"
          jf:layer-id="div-layer"
          jf:id="div1"/>
        <tei:ab
          jf:start="ab1"
          jf:id="ab1"
          jf:position="1"
          jf:relative="-1"
          jf:nchildren="-1"
          jf:nlevels="2"
          jf:nprecedents="1"
          jf:layer-id="div-layer"
          />
        <jf:placeholder
          jf:position="1"
          jf:relative="0"
          jf:nchildren="0"
          jf:nlevels="0"
          jf:nprecedents="0"
          jf:stream="/db/apps/opensiddur-tests/tests/transforms/flatten/suspend3.xml#stream"
          jf:id="seg1"/>
        <tei:ab
          jf:end="ab1"
          jf:position="1"
          jf:relative="1"
          jf:nchildren="1"
          jf:nlevels="-2"
          jf:nprecedents="1"
          jf:layer-id="div-layer"
          />
        <tei:div
          jf:suspend="div1"
          jf:position="1"
          jf:relative="1"
          jf:nchildren="1"
          jf:nlevels="-1"
          jf:nprecedents="1"
          jf:layer-id="div-layer"
          />
        <tei:div
          jf:continue="div1"
          jf:position="3"
          jf:relative="-1"
          jf:nchildren="-1"
          jf:nlevels="1"
          jf:nprecedents="1"
          jf:layer-id="div-layer"
          />
        <jf:placeholder
          jf:position="3"
          jf:relative="0"
          jf:nchildren="0"
          jf:nlevels="0"
          jf:nprecedents="0"
          jf:stream="/db/apps/opensiddur-tests/tests/transforms/flatten/suspend3.xml#stream"
          jf:id="seg3"/>
        <tei:div
          jf:end="div1"
          jf:position="3"
          jf:relative="1"
          jf:nchildren="1"
          jf:nlevels="-1"
          jf:nprecedents="1"
          jf:layer-id="div-layer"
          />
      </jf:layer>
    </j:concurrent>
    <j:streamText xml:id="stream">
      <tei:seg xml:id="seg1">One segment</tei:seg>
      <tei:seg xml:id="seg2">Two segments</tei:seg>
      <tei:seg xml:id="seg3">Three segments</tei:seg>
    </j:streamText>
  </tei:text>
</tei:TEI>
