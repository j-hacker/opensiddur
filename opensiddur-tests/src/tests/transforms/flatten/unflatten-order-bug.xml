<?xml version="1.0" encoding="UTF-8"?>
<tei:TEI 
    xmlns:tei="http://www.tei-c.org/ns/1.0"
    xmlns:j="http://jewishliturgy.org/ns/jlptei/1.0">
    <tei:teiHeader>
      <tei:publicationStmt>
        <tei:availability>
          <tei:licence target="http://www.creativecommons.org/licenses/by/3.0"/>
        </tei:availability> 
      </tei:publicationStmt>
    </tei:teiHeader>
    <tei:text>
      <j:streamText xml:id="stream">
        <tei:seg xml:id="seg1">A.</tei:seg>
        <tei:seg xml:id="seg2">B.</tei:seg>
        <tei:seg xml:id="seg3">C.</tei:seg>
        <tei:seg xml:id="seg4">D.</tei:seg>
      </j:streamText>
      <j:concurrent xml:id="concurrent">
          <j:layer type="div" xml:id="div_layer">
              <tei:div xml:id="div1">
                  <tei:head>Heading1</tei:head>
                  <tei:ab xml:id="ab1">
                      <tei:ptr target="#range(seg1,seg2)"/>
                  </tei:ab>
              </tei:div>
              <tei:div xml:id="div2">
                  <tei:head>Heading2</tei:head>
                  <tei:ab xml:id="ab2">
                      <tei:ptr target="#range(seg3,seg4)"/>
                  </tei:ab>
              </tei:div>
          </j:layer>
          <j:layer type="choice" xml:id="option_layer">
            <tei:choice>
                <j:option xml:id="opt1">
                    <tei:ptr target="#seg1"/>
                </j:option>
                <j:option xml:id="opt2">
                    <tei:ptr target="#seg2"/>
                </j:option>
                <j:option xml:id="opt3">
                    <tei:ptr target="#seg3"/>
                </j:option>
            </tei:choice>
          </j:layer>
      </j:concurrent>
    </tei:text>
</tei:TEI>
